<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText android:hint="username" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/userName"/>

    <EditText android:hint="password" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/pass" />

    <Button android:text="Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/main_button" android:onClick="SumbitAns"/>

    <TextView android:text="@string/username_right" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/error_text" />


</LinearLayout>
